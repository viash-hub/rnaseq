  VIASH_PAR_OUTPUT_DUPMATRIX=$(ViashDockerAutodetectMount "$VIASH_PAR_OUTPUT_DUPMATRIX")
  VIASH_CHOWN_VARS+=( "$VIASH_PAR_OUTPUT_DUPMATRIX" )
fi
