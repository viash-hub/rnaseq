  VIASH_PAR_OUTPUT_DUP_INTERCEPT_MQC=$(ViashDockerAutodetectMount "$VIASH_PAR_OUTPUT_DUP_INTERCEPT_MQC")
  VIASH_CHOWN_VARS+=( "$VIASH_PAR_OUTPUT_DUP_INTERCEPT_MQC" )
fi
if [ ! -z "$VIASH_PAR_OUTPUT_DUPRATE_EXP_BOXPLOT" ]; then
