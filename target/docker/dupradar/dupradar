  echo ""
  echo "    --strandedness"
  echo "        type: string"
  echo "        choices: [ forward, reverse, unstranded ]"
  echo "        strandedness of input bam file reads (forward, reverse or unstranded"
  echo "        (default, applicable to paired reads))"
  echo ""
  echo "    --versions"
  echo "        type: file"
  echo ""
  echo "    --output_dupmatrix"
  echo "        type: file, output, file must exist"
  echo "        default: \$id.dup_matrix.txt"
  echo "        path to output file (txt) of duplicate tag counts"
