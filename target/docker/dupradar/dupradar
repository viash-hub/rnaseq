  VIASH_PAR_OUTPUT_DUPRATE_EXP_BOXPLOT=$(ViashDockerAutodetectMount "$VIASH_PAR_OUTPUT_DUPRATE_EXP_BOXPLOT")
  VIASH_CHOWN_VARS+=( "$VIASH_PAR_OUTPUT_DUPRATE_EXP_BOXPLOT" )
fi
if [ ! -z "$VIASH_PAR_OUTPUT_DUPRATE_EXP_DENSPLOT" ]; then
