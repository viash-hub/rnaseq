# change file ownership
function ViashPerformChown {
  if (( ${#VIASH_CHOWN_VARS[@]} )); then
    set +e
    eval docker run --entrypoint=chown -i --rm ${VIASH_UNIQUE_MOUNTS[@]} ghcr.io/data-intuitive/umitools/umitools_extract:dev "$(id -u):$(id -g)" --silent --recursive ${VIASH_CHOWN_VARS[@]}
    set -e
  fi
}
trap ViashPerformChown EXIT

